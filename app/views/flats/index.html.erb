<div class="page">
  <div class="navbar">
    <h1>Oui</h1>
  </div>

  <div class="page-content">
    <ul id="flats-list">
      <% @flats.each do |flat| %>
        <li class="flat">
          <%= flat.name %>
          <%= flat.address %>
          <i class="fas fa-user-friends"></i> <%= flat.number_of_guests %>
          <i class="fas fa-euro-sign"></i> <%= flat.price_per_night %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
