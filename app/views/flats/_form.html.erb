<%= form_for(@flat) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :address %>
  <%= f.text_field :address %>

  <%= f.label :description %>
  <%= f.text_area :description %>

  <%= f.label :price_per_night %>
  <%= f.text_field :price_per_night %>

  <%= f.label :number_of_guests %>
  <%= f.text_field :number_of_guests %>

  <%= f.label :image %>
  <%= f.text_field :image %>

  <%= f.submit %>
<% end %>
